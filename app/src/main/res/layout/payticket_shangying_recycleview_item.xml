<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="200dp">
    <TextView
        android:id="@+id/payticket_shangying_top_recycleView_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11月20日"
        android:gravity="center"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/payticket_shangying_top_recycleView_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkgray"
        android:layout_toRightOf="@+id/payticket_shangying_top_recycleView_item_time"
        android:layout_marginTop="6dp"/>
    <RelativeLayout
        android:id="@+id/payticket_shangying_top_recycleView_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/payticket_shangying_top_recycleView_item_time"
        android:padding="15dp">
        <ImageView
            android:id="@+id/payticket_shangying_top_recycleView_item_movieIcon"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/payticket_shangying_top_recycleView_item_moviename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饥饿游戏3："
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/payticket_shangying_top_recycleView_item_movieIcon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/payticket_shangying_top_recycleView_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3123"
            android:textColor="@color/orange"
            android:layout_alignLeft="@+id/payticket_shangying_top_recycleView_item_moviename"
            android:layout_below="@+id/payticket_shangying_top_recycleView_item_moviename"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/payticket_shangying_top_recycleView_item_movieType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想看"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/payticket_shangying_top_recycleView_item_count"
            android:layout_alignTop="@+id/payticket_shangying_top_recycleView_item_count"/>
        <TextView
            android:id="@+id/payticket_shangying_top_recycleView_item_daoyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导演："
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignLeft="@+id/payticket_shangying_top_recycleView_item_count"
            android:layout_below="@+id/payticket_shangying_top_recycleView_item_count"
            android:layout_marginTop="6dp"/>
        <TextView
            android:id="@+id/payticket_shangying_top_recycleView_item_yanyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="演员："
            android:layout_alignLeft="@+id/payticket_shangying_top_recycleView_item_count"
            android:layout_below="@+id/payticket_shangying_top_recycleView_item_daoyan"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/payticket_shangying_top_recycleView_item_movieIcon"
            android:layout_marginLeft="7dp">
            <TextView
                android:id="@+id/payticket_shangying_top_recycleView_item_yushou"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="超前预售"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/payticket_reying_yushou_bg"
                android:layout_margin="4dp"
                />
            <TextView
                android:id="@+id/payticket_shangying_top_recycleView_item_yugao"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="预告片"
                android:gravity="center"
                android:textColor="@color/lawngreen"
                android:background="@drawable/payticket_reying_zhiyingxun_bg"
                android:layout_margin="4dp"
                />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/darkgray"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>