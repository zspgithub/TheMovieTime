<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#F6F6F6"
    android:gravity="center">

    <TextView
        android:id="@+id/shop_buy_bottom_gouwuche"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="加入购物车"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#FF8B0A"
        android:layout_marginLeft="20dp"
        android:background="@drawable/goouwuche"
        />

    <TextView
        android:id="@+id/shop_buy_bottom_lijigoumai"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="立即购买"
        android:layout_toRightOf="@id/shop_buy_bottom_gouwuche"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:background="@drawable/lijigomai"
        />

</RelativeLayout>