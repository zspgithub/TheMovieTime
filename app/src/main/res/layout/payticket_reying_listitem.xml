<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:padding="10dp">
    <ImageView
        android:id="@+id/payticket_reying_item_image"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/payticket_reying_item_moviename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="007:幽灵党"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/payticket_reying_item_image"/>
    <TextView
        android:id="@+id/payticket_reying_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.9"
        android:textSize="20sp"
        android:layout_toRightOf="@id/payticket_reying_item_moviename"
        android:layout_alignBottom="@id/payticket_reying_item_moviename"
        android:layout_marginLeft="10dp"
        android:textColor="@color/green"
        />
    <TextView
        android:id="@+id/payticket_reying_item_jianjie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反派帮男主一直帮到底"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:layout_alignLeft="@+id/payticket_reying_item_moviename"
        android:layout_below="@+id/payticket_reying_item_moviename"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/payticket_reying_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11月13日上映"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/payticket_reying_item_moviename"
        android:layout_below="@+id/payticket_reying_item_jianjie"
        android:layout_marginTop="5dp"
        android:textColor="@color/darkgray"/>
    <TextView
        android:id="@+id/payticket_reying_item_piaofang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日136家影院上映2291场"
        android:textSize="14sp"
        android:textColor="@color/darkgray"
        android:layout_alignLeft="@+id/payticket_reying_item_moviename"
        android:layout_below="@+id/payticket_reying_item_time"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:id="@+id/payticket_reying_item_botton_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_alignLeft="@+id/payticket_reying_item_moviename"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/payticket_reying_item_3D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D"
            android:textSize="13sp"
            android:textColor="@color/darkgray"

            android:layout_marginTop="8dp"
            android:background="@drawable/payticket_reying_item_textkuang"
            android:padding="3dp"
            />
        <TextView
            android:id="@+id/payticket_reying_item_IMAX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAX"
            android:background="@drawable/payticket_reying_item_textkuang"
            android:padding="3dp"
            android:textSize="13dp"
            android:textColor="@color/darkgray"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:id="@+id/payticket_reying_item_jumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国巨幕"
            android:background="@drawable/payticket_reying_item_textkuang"
            android:padding="3dp"
            android:textSize="13dp"
            android:textColor="@color/darkgray"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/payticket_reying_item_goupiao"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="购票"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/payticket_reying_item_goupiao_bg"
        android:layout_alignParentBottom="true"

        android:layout_alignParentRight="true"/>
</RelativeLayout>