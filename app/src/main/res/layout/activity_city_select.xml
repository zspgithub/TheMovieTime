<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.l000phone.themovietime.firstpage.CitySelectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/royalblue"
        android:gravity="center_vertical">

        <ImageView  android:id="@+id/city_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@mipmap/btn_gray_pre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="选择城市"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/city_search"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/user_one_btn"
            android:drawableLeft="@mipmap/title_bar_search_zoomin"
            android:hint="输入城市名"
            android:textColor="@color/darkgray" />

        <TextView   android:id="@+id/city_search_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@color/darkgray"
            android:textSize="20sp"
            android:text=" 取消"/>
    </LinearLayout>

    <ListView   android:id="@+id/city_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
