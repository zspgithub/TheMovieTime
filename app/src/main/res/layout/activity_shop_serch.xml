<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.l000phone.themovietime.shop.ShopSerchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0075C4">

        <ImageView
            android:id="@+id/shop_search_imgBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:onClick="search"
            android:clickable="true"
            android:focusable="false"
            android:src="@mipmap/find_news_img_detail_top_left_arrow"/>

        <TextView
            android:id="@+id/shop_search_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:onClick="search"
            android:clickable="true"
            android:layout_alignParentRight="true"/>

        <EditText
            android:id="@+id/shop_search_edsearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/shop_search_imgBack"
            android:layout_toLeftOf="@id/shop_search_search"
            android:background="@mipmap/bottom_comments_edit_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@mipmap/title_bar_search_zoomin"
            android:paddingLeft="10dp"
            android:hint="搜索正版电影周边"
            android:layout_centerVertical="true"/>




    </RelativeLayout>
</RelativeLayout>
