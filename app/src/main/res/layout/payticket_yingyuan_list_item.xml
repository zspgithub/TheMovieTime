<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/payticket_yingyuan_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
    <ImageView
        android:id="@+id/payticket_yingyuan_item_nearImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cinema_list_nearest_icon"
        />
    <TextView
        android:layout_below="@id/payticket_yingyuan_item_nearImg"
        android:id="@+id/payticket_yingyuan_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国国际影城"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/payticket_yingyuan_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/payticket_yingyuan_item_name"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/payticket_yingyuan_item_qi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/orange"
        />
    <TextView
        android:id="@+id/payticket_yingyuan_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:layout_toLeftOf="@+id/payticket_yingyuan_item_qi"
        android:layout_alignBottom="@+id/payticket_yingyuan_item_qi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textColor="@color/orange"
        android:layout_toLeftOf="@+id/payticket_yingyuan_item_money"
        android:layout_alignBottom="@+id/payticket_yingyuan_item_money"/>
    <ImageView
        android:id="@+id/payticket_yingyuan_item_icon_vip"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_small_vip"
        android:layout_below="@+id/payticket_yingyuan_item_address"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:id="@+id/payticket_yingyuan_item_icon_Imax"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_imax"
        android:layout_below="@+id/payticket_yingyuan_item_address"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/payticket_yingyuan_item_icon_vip"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:id="@+id/payticket_yingyuan_item_icon_P"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_small_parking"
        android:layout_below="@+id/payticket_yingyuan_item_address"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/payticket_yingyuan_item_icon_Imax"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:id="@+id/payticket_yingyuan_item_icon_wifi"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_s_wififree"
        android:layout_below="@+id/payticket_yingyuan_item_address"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/payticket_yingyuan_item_icon_P"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/payticket_yingyuan_item_dianqing"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="店庆特惠"
        android:textColor="@color/red"
        android:gravity="center"
        android:background="@drawable/payticket_yingyuan_dianqing_bg"
        android:layout_below="@+id/payticket_yingyuan_item_address"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/payticket_yingyuan_item_icon_wifi"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/payticket_yingyuan_item_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lightgray"
        android:layout_below="@+id/payticket_yingyuan_item_layout"/>
</RelativeLayout>