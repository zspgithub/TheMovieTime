<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:id="@+id/reying_info_yanyuanImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/img_default_90x90"
        />
    <TextView
        android:id="@+id/reying_info_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="丹尼尔.克雷格"
        android:gravity="center"
        android:layout_below="@+id/reying_info_yanyuanImage"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/reying_info_shi"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="饰:"
        android:layout_below="@+id/reying_info_name"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
</RelativeLayout>