<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firstpage.search.SearchMovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/royalblue">

        <ImageView  android:id="@+id/first_search_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@mipmap/btn_gray_pre" />

        <EditText   android:id="@+id/first_search_et"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="40dp"
            android:background="@drawable/user_one_btn"
            android:hint="找影片/影院/影人"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/title_bar_search_zoomin"
            android:drawableRight="@mipmap/home_scan" />

        <TextView   android:id="@+id/first_search_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout   android:id="@+id/first_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
