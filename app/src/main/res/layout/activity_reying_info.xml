        <RelativeLayout
            android:id="@+id/reying_info_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/reying_info_movieLayout"
            android:layout_marginTop="10dp"
            android:padding="20dp">
            <TextView
                android:id="@+id/reying_info_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关新闻"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/reying_info_news_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《007》"
                android:layout_below="@+id/reying_info_news_title"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/reying_info_news_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="伊安弗莱明画龙点睛 片方大破版权危机"
                android:layout_below="@+id/reying_info_news_content_title"
                />
            <ImageView
                android:id="@+id/reying_info_news_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/img_default_90x90"
                android:layout_below="@+id/reying_info_news_title"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/reying_info_news_next_image"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@mipmap/btn_gray_next"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/reying_info_yingping_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reying_info_news"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="20dp">
            <TextView
                android:id="@+id/reying_info_yingping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选影评"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/reying_info_yingping_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《德邦已死》"
                android:layout_below="@+id/reying_info_yingping"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/reying_info_yingping_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="他出生于拉两个拉拉两个啦啦啦啦啦啦啦啦啦啦法拉利来伐啦来理发啦啦啦费拉拉了法律"
                android:layout_below="@+id/reying_info_yingping_title"
                android:maxLines="3"
                />
            <ImageView
                android:id="@+id/reying_info_yingping_userIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/actor_detail_header_background_region_icon"
                android:layout_below="@+id/reying_info_yingping_content"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/reying_info_yingping_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吾血之血"
                android:layout_toRightOf="@+id/reying_info_yingping_userIcon"
                android:layout_below="@+id/reying_info_yingping_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/reying_info_yingping_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-11-04 00:16"
                android:layout_below="@+id/reying_info_yingping_userName"
                android:layout_alignLeft="@+id/reying_info_yingping_userName"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:id="@+id/reying_info_yingping_next_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_gray_next"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
