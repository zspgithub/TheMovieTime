<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.l000phone.themovietime.payticket.ReyingInfoActivity">
    <RelativeLayout
        android:id="@+id/reying_info_totlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/royalblue">
        <ImageView
            android:id="@+id/reying_info_image_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/title_btn_back_background"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/reying_info_shareImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/title_bar_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/title_bar_favorite"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/reying_info_shareImage"
            android:layout_marginRight="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影讯"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reying_info_totlebar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/reying_info_movieLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"

        android:background="@mipmap/actor_detail_top_background">
        <TextView
            android:id="@+id/reying_info_movieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="007:幽灵党"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp" />
        <ImageView
            android:id="@+id/reying_info_arc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/arc_green"
            android:layout_below="@+id/reying_info_movieName"/>
        <RelativeLayout
            android:layout_below="@+id/reying_info_arc"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/reying_info_movietime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150分钟"
                android:layout_marginLeft="170dp"/>
            <TextView
                android:id="@+id/reying_info_movietype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动作"
                android:layout_below="@+id/reying_info_movietime"
                android:layout_alignLeft="@+id/reying_info_movietime"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/reying_info_movieShowtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年"
                android:layout_below="@+id/reying_info_movietype"
                android:layout_alignLeft="@+id/reying_info_movietype"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/reying_info_woxiangkan"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="我想看"
                android:gravity="center"
                android:layout_below="@+id/reying_info_movieShowtime"
                android:layout_alignLeft="@+id/reying_info_movieShowtime"
                android:layout_marginTop="20dp"
                android:background="@drawable/payticket_reying_zhiyingxun_bg"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="我要评分"
                android:textColor="@color/lawngreen"
                android:gravity="center"
                android:layout_below="@+id/reying_info_movieShowtime"
                android:layout_toRightOf="@+id/reying_info_woxiangkan"
                android:layout_marginTop="20dp"
                android:background="@drawable/payticket_reying_zhiyingxun_bg"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="查影讯/购票"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/payticket_reying_item_goupiao_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/reying_info_woxiangkan"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/reying_info_movieIcon"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:src="@mipmap/img_default_300x200"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
