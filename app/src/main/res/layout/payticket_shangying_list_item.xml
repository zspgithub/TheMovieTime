<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <TextView
        android:id="@+id/payticke_shangying_listView_item_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19日"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:id="@+id/payticke_shangying_listView_item_movieIcon"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:src="@mipmap/img_default_90x90"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@+id/payticke_shangying_listView_item_day"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/payticke_shangying_listView_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的少女时代"
        android:layout_toRightOf="@+id/payticke_shangying_listView_item_movieIcon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/payticke_shangying_listView_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3333"
        android:textColor="@color/orange"
        android:layout_alignLeft="@+id/payticke_shangying_listView_item_title"
        android:layout_below="@+id/payticke_shangying_listView_item_title"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/payticke_shangying_listView_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人想看"
        android:textColor="@color/darkgray"

        android:layout_toRightOf="@+id/payticke_shangying_listView_item_count"
        android:layout_alignTop="@+id/payticke_shangying_listView_item_count"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/payticke_shangying_listView_item_daoyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导演："
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/payticke_shangying_listView_item_count"
        android:layout_below="@+id/payticke_shangying_listView_item_count"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/payticke_shangying_listView_item_movieIcon"
        android:layout_alignLeft="@+id/payticke_shangying_listView_item_count"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/payticke_shangying_listView_item_daoyan"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/payticket_shangying_listView_item_yushou"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="超前预售"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/payticket_reying_yushou_bg"

            />
        <TextView
            android:id="@+id/payticket_shangying_listView_item_yugao"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="预告片"
            android:gravity="center"
            android:textColor="@color/lawngreen"
            android:background="@drawable/payticket_reying_zhiyingxun_bg"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</RelativeLayout>