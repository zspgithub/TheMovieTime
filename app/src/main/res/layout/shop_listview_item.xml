<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#eee"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/shop_listview_item_color"
            android:layout_width="20dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/shop_listview_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_listview_item_color"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#424242"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/shop_listview_item_img_more"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/img_arrow_right" />

        <TextView
            android:id="@+id/shop_listview_item_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:layout_toLeftOf="@id/shop_listview_item_img_more"
            android:textSize="19sp"
            android:clickable="true"
            android:layout_alignBaseline="@id/shop_listview_item_title"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/shop_listview_item_topimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/shop_listview_item_bottom_imgone"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/shop_listview_item_bottom_tv_nameone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/shop_listview_item_bottom_tv_moneyone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F58484"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#eee"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/shop_listview_item_bottom_imgtwo"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/shop_listview_item_bottom_tv_nametwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/shop_listview_item_bottom_tv_moneytwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#F58484"/>
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#eee"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/shop_listview_item_bottom_imgthree"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:id="@+id/shop_listview_item_bottom_tv_namethree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/shop_listview_item_bottom_tv_moneythree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#F58484"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>