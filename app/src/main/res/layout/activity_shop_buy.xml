<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.l000phone.themovietime.shop.ShopBuyActivity">

    <include
        android:id="@+id/shop_buy_bottom_include"
        layout="@layout/shop_buy_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"/>
    <include
        android:id="@+id/shop_buy_top_in"
        layout="@layout/shop_buy_top_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/shop_buy_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/shop_buy_bottom_include"
        android:layout_below="@id/shop_buy_top_in"></ListView>

    </RelativeLayout>
