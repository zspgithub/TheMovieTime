<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:id="@+id/topListDetails_item0_rankNum"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/topmovie_list_numd"
        android:gravity="center"
        android:textColor="#fff"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/topListDetails_item0_image"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/topListDetails_item0_rankNum"
        android:layout_toEndOf="@+id/topListDetails_item0_rankNum"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="虎胆龙威"
        android:id="@+id/topListDetails_item0_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/topListDetails_item0_image"
        android:layout_toEndOf="@+id/topListDetails_item0_image"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.0"
        android:id="@+id/topListDetails_item0_rating"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/topListDetails_item0_name"
        android:layout_toEndOf="@+id/topListDetails_item0_name"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="#0f0"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Die Hard"
        android:id="@+id/topListDetails_item0_nameEn"
        android:layout_below="@+id/topListDetails_item0_name"
        android:layout_alignLeft="@+id/topListDetails_item0_name"
        android:layout_alignStart="@+id/topListDetails_item0_name"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导演"
        android:id="@+id/topListDetails_item0_director"
        android:layout_below="@+id/topListDetails_item0_nameEn"
        android:layout_alignLeft="@+id/topListDetails_item0_nameEn"
        android:layout_alignStart="@+id/topListDetails_item0_nameEn"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主演"
        android:id="@+id/topListDetails_item0_actor"
        android:layout_below="@+id/topListDetails_item0_director"
        android:layout_alignLeft="@+id/topListDetails_item0_director"
        android:layout_alignStart="@+id/topListDetails_item0_director"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上映日期"
        android:id="@+id/topListDetails_item0_releaseDate"
        android:layout_below="@+id/topListDetails_item0_actor"
        android:layout_alignLeft="@+id/topListDetails_item0_actor"
        android:layout_alignStart="@+id/topListDetails_item0_actor"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="布鲁斯威利斯。。。。。"
        android:id="@+id/topListDetails_item0_remark"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/topListDetails_item0_image"
        android:layout_alignLeft="@+id/topListDetails_item0_image"
        android:layout_alignStart="@+id/topListDetails_item0_image"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美国"
        android:id="@+id/topListDetails_item0_releaseLocation"
        android:layout_alignTop="@+id/topListDetails_item0_releaseDate"
        android:layout_toRightOf="@+id/topListDetails_item0_releaseDate"
        android:layout_toEndOf="@+id/topListDetails_item0_releaseDate"
        android:layout_marginLeft="5dp"/>


</RelativeLayout>