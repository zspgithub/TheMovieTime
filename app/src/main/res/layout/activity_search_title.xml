<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.l000phone.themovietime.SearchTitleActivity">
    <LinearLayout
        android:id="@+id/payticket_titlebar_search_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/royalblue"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/payticket_search_fragment_imageBack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@mipmap/find_news_img_detail_top_left_arrow"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:layout_marginTop="5dp"
            android:background="@drawable/payticket_search_bg">
            <ImageView
                android:id="@+id/search_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/title_bar_search_zoomin"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/payticket_searchView_editText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="找影片/影院/影人"
                android:layout_toRightOf="@+id/search_iamge"
                android:background="@color/white">
            </EditText>
            <ImageView
                android:id="@+id/payticket_title_erweima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/title_bar_search_button_scan_background"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/payticket_titlebar_search_tv_sousuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/payticket_search_remensousuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门搜索"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/darkgray"
        android:background="@color/whitesmoke"
        android:layout_below="@+id/payticket_titlebar_search_layout"/>
</RelativeLayout>
