<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <ImageView
        android:id="@+id/yingyuan_info_recyclerView_item_image"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:src="@mipmap/img_default_90x90"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/yingyuan_info_recyclerView_item_movieName"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="007:幽灵党"
        android:layout_below="@+id/yingyuan_info_recyclerView_item_image"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>