<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firstpage.search.fragments.SearchReadyFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView  android:id="@+id/search_raedy_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/mine_main_title_bg"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:background="@color/lightgray"
        android:textColor="@color/gray"
        android:paddingLeft="10dp"
        android:text="热门搜索"/>

    <LinearLayout   android:id="@+id/search_ready_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">
    </LinearLayout>

    <TextView   android:id="@+id/search_history_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="@color/lightgray"
        android:visibility="gone"
        android:textColor="@color/gray"
        android:text="搜索历史"/>

    <ListView   android:id="@+id/search_history_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <TextView   android:id="@+id/search_history_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:text="点击清空历史记录"/>

</LinearLayout>
