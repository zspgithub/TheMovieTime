<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="180dp"
        android:id="@+id/prevue_pageSubArea"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/prevue_pageSubArea_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_alignBottom="@+id/prevue_pageSubArea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#60000000"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/prevue_pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/prevue_pageSubArea_title"
        android:padding="8dp">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</RelativeLayout>