<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/news_item1_image"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/news_item1_tag"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小鬼当家"
        android:id="@+id/news_item1_title1"
        android:layout_alignTop="@+id/news_item1_image"
        android:layout_toRightOf="@+id/news_item1_image"
        android:layout_toEndOf="@+id/news_item1_image"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小家伙背后的大奇迹"
        android:id="@+id/news_item1_title2"
        android:layout_below="@+id/news_item1_title1"
        android:layout_alignLeft="@+id/news_item1_title1"
        android:layout_alignStart="@+id/news_item1_title1"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10小时之前"
        android:textSize="10sp"
        android:id="@+id/news_item1_publishTime"
        android:layout_below="@+id/news_item1_title2"
        android:layout_alignLeft="@+id/news_item1_title2"
        android:layout_alignStart="@+id/news_item1_title2"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论2"
        android:id="@+id/news_item1_commentCount"
        android:textSize="10sp"
        android:layout_alignTop="@+id/news_item1_publishTime"
        android:layout_toRightOf="@+id/news_item1_publishTime"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="策划"
        android:id="@+id/news_item1_tag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="10sp"
        android:background="#f00"
        android:visibility="gone"/>

</RelativeLayout>