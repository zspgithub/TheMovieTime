<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:id="@+id/prevue_item_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生活美版预告"
        android:id="@+id/prevue_item_movieName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/prevue_item_image"
        android:layout_toEndOf="@+id/prevue_item_image"
        android:textStyle="bold"
        android:textColor="#111"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="迪恩人物关系呈现"
        android:id="@+id/prevue_item_summary"
        android:layout_below="@+id/prevue_item_movieName"
        android:layout_alignLeft="@+id/prevue_item_movieName"
        android:layout_marginTop="8dp"/>
</RelativeLayout>