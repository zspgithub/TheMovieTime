<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.l000phone.themovietime.payticket.PayTicketMainFragment">

    <!-- TODO: Update blank fragment layout -->
    <RadioGroup
        android:id="@+id/payticket_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/whitesmoke"
        >
        <RadioButton
            android:id="@+id/payticket_main_title_btnleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="正在热映"
            android:button="@null"
            android:gravity="center"
            android:background="@null"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/payticket_main_title_btnright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="即将上映"
            android:button="@null"
            android:gravity="center"
            android:background="@null"
            />
    </RadioGroup>
    <LinearLayout
        android:id="@+id/payticket_main_bottombtn_line_layout"
        android:layout_below="@+id/payticket_title_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="2dp">
        <TextView
            android:id="@+id/payticket_main_btn_bottomline_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/royalblue"/>
        <TextView
            android:id="@+id/payticket_main_btn_bottomline_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/payticket_firstpage_fragment_layout"
        android:layout_below="@+id/payticket_main_bottombtn_line_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>
